extends layout

block content

  h1 #{book.id}: #{book.title}
  

  if book_instance.length

    p #[strong Delete the following booksinstance before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 BookInstance
      dl
        each instance in book_instance 
            dt 
                a(href=instance.url) #{book.title},  #{instance.id}

            

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
